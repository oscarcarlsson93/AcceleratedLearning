@model HemNet.Models.ViewModels.WeatherVm



<hr />
<h1>Väder</h1>


<form asp-action="ShowTimeTemp">

    <div class="form-group">
        <label asp-for="Longitude" class="control-label"></label>
        <input asp-for="Longitude" class="form-control" />
        <span asp-validation-for="Longitude" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Latitude" class="control-label"></label>
        <input asp-for="Latitude" class="form-control" />
        <span asp-validation-for="Latitude" class="text-danger"></span>
    </div>

    <div class="form-group">
        <input type="submit" value="Ok" class="btn btn-default" />
    </div>
    

    <div class="alert alert-danger" role="alert">
        @ViewData["Error"]
    </div>


</form>

@if (Model.Temps.Count > 0)
{



<div class="showarea">
    <p>Prognos för <strong>@DateTime.Now.Date.ToString("yyyy-MM-dd")</strong>

    <table class="table">
        <thead>
            <tr>
                <th>
                    Tid
                </th>
                <th>
                    Temperatur
                </th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model.Temps)
            {
                <tr>
                    <td>
                        @item.Time.ToString("yyyy-mm-dd HH:mm")
                        
                    </td>
                    <td>
                        @item.Temp.ToString("F1")°C
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>
}
